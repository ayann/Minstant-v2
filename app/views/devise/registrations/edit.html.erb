<% content_for :title do %>
   Dashboard::Editer le compte %>
<% end %>
<div class="row" id="devise_registration_edit_form">
  <%= devise_error_messages! %>
  <h2>Editer votre Compte Minstant</h2>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <div class="form-inputs">
      <%= f.input :companyName, label: 'Nom de l\'entreprise', hint: 'No special characters.' ,:autofocus => true %>
    </div>
    <div class="form-inputs">
      <%= f.input :address, label: 'Adresse de l\'entreprise' %>
    </div>
    <div class="form-inputs">
      <%= f.input :tel, label: 'Numéro de télephone de l\'entreprise'%>
    </div>
    <div class="form-inputs">
      <%= f.input :email %>
    </div>
    <div class="form-inputs">
      <%= f.input :password, label: 'Mot de passe',hint:'laisser vide si vous ne voulez pas changer', :autocomplete => "off" %>
    </div>
    <div class="form-inputs">
      <%= f.input :password_confirmation, label: 'Repeter mot de passe' %>
    </div>
    <div class="form-inputs">
      <%= f.input :current_password, label: 'Votre mot de passe actuel', hint:'nous avons besoin de votre mot de passe actuel pour confirmer vos modifications' %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update",:class => 'button success tiny expand' %>
    </div>
  <% end %>
  <hr>
  <h3>Suppression du compte</h3>
  
  <p>insatisfait? <%= link_to "Supprimer votre compte", registration_path(resource_name), :data => { :confirm => "êtes-vous sûr?" }, :method => :delete,:class => 'button alert tiny' %></p>
</div>

